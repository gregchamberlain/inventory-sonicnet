<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-6">
		<h1><%= @location.name %></h1>
		<p><%= @location.details %></p>

		<table class="table">
			<thead>
				<tr>
					<th>Item</th>
					<th>Quantity</th>
				</tr>
			</thead>
			<tbody>
				<% @location.item_stocks.each do |stock| %>
					<tr>
						<td><%= stock.item.model %></td>
						<td><%= stock.quantity %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-6">
		<% @location.orders.each do |order| %>
			<div class="panel <%= order.to == @location ?  "panel-success" : "panel-danger" %>">
			  <div class="panel-heading">
			  	<%= order.from.name %>
			  	<span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
			  	<%= order.to.name %>
			  </div>
			  <div class="panel-body">
			  	<table class="table">
			  		<thead>
			  			<tr>
			  				<th>Item</th>
			  				<th>Quantity</th>
			  			</tr>
			  		</thead>
			  		<tbody>
			  			<% order.orderables.each do |orderable| %>
			  				<tr>
			  					<td><%= "#{orderable.item.make} #{orderable.item.model}" %></td>
			  					<td><%= orderable.quantity %></td>
			  				</tr>
			  			<% end %>
			  		</tbody>
			  	</table>
			  </div>
			</div>
		<% end %>
	</div>
</div>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
